// A test of the erase! macro
// Passed, but feature is not widely maintained

package!("std");
use_rule!("std");

let hide: struct
{
    data: i32,
}

let intern: struct
{
    h: hide,
}

let New(self: ^intern) -> void
{
    self.h.data = 123i32;
}

let main() -> i32
{
    let b: hide;
    b.data = 5i32;

    erase!("hide");

    // This should error
    // b.data = 5;

    let a: intern;

    // This line should error
    // print(a.h.data);

    0i32
}
