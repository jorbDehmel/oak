package!("std");
include!("extra/bit_print.oak");
include!("std/opt.oak");
use_rule!("std");

let test<t>: struct
{
    data: [8]t,
}

let main() -> i32
{
    // Auto-instantiation for structs (works fine)
    // Auto-instantiation for enums (works fine)
    let t: test<i32>;
    let o: opt<i32>;

    o.wrap_none();
    extra::hex_dump(@o);

    o.wrap_some(Lbs(255i32, 8u8));
    extra::hex_dump(@o);

    0i32
}
