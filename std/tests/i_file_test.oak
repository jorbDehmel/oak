package!("std");
use_rule!("std");

include!("std/string.oak");
include!("std/file.oak");

let main() -> i32
{
    // Write test file
    let out: o_file;
    let to_write: string;
    out.open("hi.txt");

    to_write = "abcdefghijklmnopqrstuvwxyz\n";

    out.write(to_write);
    out.close();
    to_write.Del();
    out.Del();

    // Read test file
    let str_a: string;
    let str_b: string;

    let inp: i_file;
    inp.open("hi.txt");
    str_a = inp.read(5u128);
    str_b = inp.read(5u128);

    print("a: ");
    print(str_a);
    print("\nb: ");
    print(str_b);
    print("\n");

    close(@inp);
    Del(@str_a);
    Del(@str_b);
    Del(@inp);

    0i32
}
