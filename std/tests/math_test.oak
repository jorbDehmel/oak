package!("std");
use_rule!("std");
include!("std/math.oak");
include!("std/printf.oak");

let main() -> i32
{
    let e: f64;
    e = math_e!;
    print(e);
    print("\n");

    let pi: f64;
    pi = math_pi! * -1.0f64;
    print(pi);
    print("\n");

    pi = abs(pi);
    print(pi);
    print("\n");

    print(to_i32(pow(2u128, 12u128)));
    print("\n\n");

    let x = -2.0f64 * pi;

    while x < 2.0f64 * pi
    {
        print(x);
        print("\t");
        print(sin(x));
        print("\t");
        print(round(sin(x)));
        print("\n");

        x += 0.1f64;
    }

    print(tan(pi / 2.0f64));
    print("\n");

    print(floor(2.0f64));
    print("\n");

    print(sqrt(1666.0f64));
    print("\n");

    print(f_mod(11.999f64, 4.0f64));
    print("\n");

    print(ceiling(12.0f64));
    print("\n");

    let rad = 0.0f64;
    while rad < 4.0f64 * math_pi!
    {
        printf!(
            "The angle % is equal to % degrees.\n",
            rad,
            radians_to_degrees(rad)
        );

        rad += math_pi! / 4.0f64;
    }

    let deg = 0.0f64;
    while deg < 720.0f64
    {
        printf!(
            "The angle % is equal to % radians.\n",
            deg,
            degrees_to_radians(deg)
        );

        deg += 45.0f64;
    }

    0i32
}
