// Tests the turtle package's orientation functions.

package!("std", "turtle");
use_rule!("std");
include!("std/cstr.oak");

let main() -> i32
{
    let t: turtle::turtle;

    t.up();
    t.set_position(256u64, 256u64);
    t.set_orientation(0.0f64);
    t.down();

    while t.is_running
    {
        t.right(7.0f64);
        t.forward(100u64);
        t.backward(100u64);
    }

    let file: [13]i8;
    strcpy(file, "whatever.bmp");

    t.save(file);

    0i32
}
