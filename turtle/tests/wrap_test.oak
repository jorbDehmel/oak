// Tests the turtle package by moving the turtle according to
// some basic brownian motion.

package!("std", "turtle");
include!("std/printf.oak");
use_rule!("std");

let main() -> i32
{
    let t: turtle::turtle;

    t.x = 256u64;
    t.y = 256u64;
    t.orientation = 175.0f64;

    t.down();

    while t.is_running
    {
        t.forward(20u64);
    }

    0i32
}
