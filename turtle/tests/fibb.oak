// Tests the turtle Oak package by turning the turtle according
// to the numbers in the Fibonacci sequence.

package!("std", "turtle");
include!("std/printf.oak");
use_rule!("std");

let main() -> i32
{
    let t: turtle::turtle;

    let a = 0u128;
    let b = 1u128;
    let c: u128;

    t.up();
    t.x = 256u64;
    t.y = 256u64;
    t.down();

    while t.is_running
    {
        c = a + b;
        a = b;
        b = c;

        t.forward(10u64);
        t.orientation = to_f64(to_i32(a % 360u128));
    }

    0i32
}
